{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM",
      "ScriptHost",
      "WebWorker"
    ],
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    // "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/*"],
      "@docs/*": ["docs/*"]
    },
    "types": [
      "vite/client",
      "vitepress/client"
    ]
  },
  "include": [
    "docs/**/*.js",
    "docs/**/*.json",
    "docs/**/*.ts",
    "docs/**/*.vue",

    "docs/.vitepress/**/*.js",
    "docs/.vitepress/**/*.json",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",

    "src/**/*.js",
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.vue",
  ]
}
